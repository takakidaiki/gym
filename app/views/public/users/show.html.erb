<div>
  <h3><%= @user.name %></h3>
  <%= image_tag @user.get_profile_image(100,100) %>
  <% if @user == current_user %>
    <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
    <p><%= link_to "退会", users_unsubscribe_path(user_id: @user.id) %></p>
  <% end %>
</div>

<% @reviews.each do |review| %>
<div>
  <p>タイトル：<%= review.title %></p>
  <p>説明：<%= review.content %></p>
  <p>ユーザーネーム：<%= review.user.name %></p>
  <p><%= link_to "#{review.review_comments.count} コメント", review_path(review.id) %></p>
</div>
<% end %>