<div class="row no-gutters">
  <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
    <h5 class="text-dark bg-light p-4 mb-0">プロフィール編集</h5>
    <div class="form-body p-4">
      <% if @user.errors.any? %>
        <%= @user.errors.count %>errors prohibited this obj from being saved:
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      <%= form_with model: @user do |f| %>
        <div class="mb-3">
          <label for="inputName">Name</label>
          <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
        </div>
        <div class="mb-3">
          <label for="inputIntroduction">Introduction</label>
          <%= f.text_area :introduction, id:"inputName", placeholder:"コメント" %>
        </div>
        <div class="mb-3">
          <label for="inputImage">ProfileImage</label>
          <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>  
        </div>
        <%= f.submit "変更を保存" %>
      <% end %>
    </div>
  </div>
</div>
