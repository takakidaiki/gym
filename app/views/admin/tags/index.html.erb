<div class="container px-5 px-sm-0">
  <div class="row">
    <h3>タグ一覧</h3>
    <table class="table table-hover table-inverse">
    　<thead>
        <tr>
        　<th>タグ名</th>
        　<th></th>
        　<th></th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <% Tag.all.each do |tag| %>
      <tbody>
        <tr>
          <td><%= tag.name %></td>
          <td>
            <%= link_to '編集', edit_admin_tag_path(tag) %>
          </td>
          <td>
            <%= link_to '削除', admin_tag_path(tag), method: :delete %>
          </td>
        </tr>
      </tbody>
      <% end %>
    </table>
  </div>
  <div class="my-5">
    <%= link_to 'タグ登録', new_admin_tag_path %>
  </div>
</div>