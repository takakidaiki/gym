<div class="container px-5 px-sm-0">
  <div class="row">
    <h3>レビュー一覧</h3>
    <table class="table table-hover table-inverse">
    　<thead>
        <tr>
          <th colspan="1"></th>
        </tr>
      </thead>
      <% @reviews.each do |review| %>
      <tbody>
        <tr>
          <td>
            <div class="row">
              <div class="mb-3 my-3 ml-3">
                <%= image_tag @review.user.get_profile_image(50,50) %>
              </div>
              <div class="my-4 ml-3">
                <p>ユーザーネーム：<%= @review.user.name %></p>
              </div>
            </div>
            <p>タイトル：<%= @review.title %></p>
            <p>説明：<%= @review.content %></p>
            <p>投稿日：<%= @review.created_at.strftime('%Y/%m/%d') %></p>
          </td>
        </tr>
      </tbody>
      <% end %>
    </table>
  </div>
  <div class="my-5">
    <%= link_to 'タグ登録', new_admin_tag_path %>
  </div>
</div>