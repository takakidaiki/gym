<div class="container px-5 px-sm-0">
  <div class="row">
    <h2>全ユーザー一覧</h2>
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th>ユーザー名</th>
          <th>メールアドレス</th>
          <th></th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <% @users.each do |user| %>
      <tbody>
        <tr>
          <td>
            <%= user.name %>
          </td>
          <td>
            <%= user.email %>
          </td>
          <td>
            <%= link_to '削除', admin_user_path(user), method: :delete, data: { confirm: '本当に削除しますか？' } %> 
          </td>
        </tr>
      </tbody>
      <% end %>
    </ul>